<div id='modal_layer'>
</div>
<div id='card_shown'>
  <a href='#'><i class="fa fa-times-thin fa-2x"></i></a>
  <div id="card_show_left">
    <section id='card_info'>
      <div id='card_name'>
        <i class="fa fa-trello fa-rotate-90 fa-lg" aria-hidden="true"></i>
        <h2 contenteditable='true'>{{card.name}}</h2>
        <h6>in list <span>{{list.name}}</span></h6>
      </div>
      <div id='card_labels'>
      </div>
      <div id='card_due_date'>
      </div>
      <div id='card_description'>
        {{#if card.description}}
          <h6>Description <span class='edit_card_description'>Edit</span></h6>
          <p>{{card.description}}</p>
        {{else}}
          <h6><span class='highlight edit_card_description'><i class='fa fa-pencil-square-o fa-lg'></i>Edit the description</span></h6>
        {{/if}}
        <form id="card_description_form" class='card_show_forms'>
          <textarea name='card_description'>{{card.description}}</textarea>
          <input type='submit' value='Save' /> <i class="fa fa-times-thin fa-2x" id='close_desc_form'></i>
        </form>
      </div>
    </section>
    <section id='card_info'>
      <div>
        <i class="fa fa-commenting fa-lg" aria-hidden="true"></i>
        <h2>Add Comment</h2>
      </div>
      <div id='comment_form'>
        <form id="card_comment_form" class='card_show_forms'>
          <textarea name='card_comment' placeholder='Add a comment'></textarea>
          <input type='submit' value='Send' disabled/>
        </form>
      </div>
      <div id='card_comments'>
      </div>
    </section>
    <section id='activity_info'>
      <div>
        <i class="fa fa-tasks fa-lg" aria-hidden="true"></i>
        <h2>Activity</h2>
      </div>
      <div id='activity_list'>
      </div>
    </section>
  </div>
  <div id='card_show_right'>
    <section id='card_show_actions'>
      <h2>Add</h2>
      <ul id='card_show_add'>
        <li id='card_show_add_label'>
          <span>  
          <i class="fa fa-tags fa-lg" aria-hidden="true"></i>
          Labels</span>
        </li>
        <li id='card_show_add_checklist'>
          <span>  
          <i class="fa fa-list-ol fa-lg" aria-hidden="true"></i>
          Checklist</span>
        </li>
        <li id='card_show_add_duedate'>
          <span>     
          <i class="fa fa-calendar fa-lg" aria-hidden="true"></i>
          Due Date</span>
        </li>
      </ul>
      <ul id='card_show_actions'>
      </ul>
    </section>
  </div>
</div>